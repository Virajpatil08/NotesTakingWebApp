<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Task Details</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-zinc-900 text-white">
  <div class="main w-full min-h-screen flex flex-col items-center p-10">

    <!-- Back Button -->
    <div class="w-full max-w-3xl">
      <a class="text-blue-400 hover:underline flex items-center gap-2 mb-6" href="/">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
        </svg>
        Go Back To Home Page
      </a>
    </div>

    <!-- Task Details Card -->
    <div class="bg-zinc-800 w-full max-w-3xl p-8 rounded-lg shadow-lg">
      <h1 class="text-4xl font-bold tracking-tight text-blue-400 border-b border-gray-600 pb-4">
        File Name : <%= filename %>
      </h1>
      <p class="text-lg mt-6 leading-relaxed text-gray-300">
       Details :  <%= filedata %> 
      </p>
    </div>

  </div>
</body>
</html>
